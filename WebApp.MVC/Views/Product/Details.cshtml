@model WebApp.MVC.Models.ProductViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<table class="table table-bordered">
    <tr>
        <th>Product Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Created Date</th>
        <td>@Model.CreateAdd?.ToString("yyyy-MM-dd")</td>
    </tr>
    <tr>
        <th>Category</th>
        <td>@Model.CategoryName</td>
    </tr>
</table>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>